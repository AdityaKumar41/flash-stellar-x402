{
  "name": "x402-flash-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "Micropayment SDK for Stellar Soroban with AI agent monetization",
  "workspaces": [
    "sdk/*",
    "examples/*",
    "scripts"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "rm -rf node_modules sdk/*/node_modules examples/*/node_modules scripts/node_modules sdk/*/dist examples/*/dist",
    "setup:demo": "./scripts/setup-demo.sh",
    "generate:keys": "./scripts/generate-keys.sh",
    "deploy:contract": "./scripts/deploy-simple.sh",
    "start:demo": "./scripts/start-demo.sh",
    "verify:types": "./scripts/verify-typescript.sh"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
