{
  "name": "@x402-flash/stellar-sdk",
  "version": "0.1.6",
  "description": "TypeScript SDK for x402-flash micropayments on Stellar Soroban - compatible with x402 payment protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "prepublish": "npm run build",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "stellar",
    "soroban",
    "micropayments",
    "x402",
    "payment-channel",
    "flash-payment",
    "web3",
    "blockchain"
  ],
  "author": "AdityaKumar41",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdityaKumar41/flash-stellar-x402"
  },
  "bugs": {
    "url": "https://github.com/AdityaKumar41/flash-stellar-x402/issues"
  },
  "homepage": "https://github.com/AdityaKumar41/flash-stellar-x402#readme",
  "dependencies": {
    "@stellar/stellar-sdk": "^12.0.0",
    "express": "^4.18.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  }
}
